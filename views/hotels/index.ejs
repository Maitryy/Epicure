<% layout('layouts/boilerplate') %> 
<body>
  
<h1>All Hotels</h1>
<div>
  <a href="/hotels/new">Add new Hotel</a>
</div>
<ul>
    <% for (let hotel of hotels) {  %> 
    <div class="row mb-3">
      <div class="col-md-4">
        <img class="img-fluid" alt="" src="<%= hotel.image %> ">
      </div>
      <div class="col-md-8">
        <div class="card-body">
          <h5 class="card-title"><%= hotel.name %> </h5>
          <p class="card-text"><%= hotel.description.substring(0,199)+'...' %> </p>
          <p class="card-text">
            <small class="text-muted"><%= hotel.location %> </small>
          </p>
          <p class="card-text">
            <small class="text-muted">Price: $ <%= hotel.price %> </small>
          </p>
          <a class="btn btn-primary" href="hotels/<%= hotel._id %> ">View <%= hotel.name %> </a>
        </div>
      </div>
    </div>
    <% }%>
</ul>