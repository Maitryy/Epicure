<div class="row">
    <div class="col-7 mb-5">
      <div class="card">
        <img src="<%= hotel.image %>" class="card-img-top" style='height: 400px;' alt="...">
      </div>
      <div class="card mb-3" id="stick-it1">
        <div class="card-body">
            <h5 class="card-title"><%= hotel.name%></h5>
            <p class="card-text"><%= hotel.description.substring(0,200)+'...' %></p>
        </div>

        <%  if( currentUser && hotel.author.equals(currentUser._id))  {%>

        <div class="card-body">
        <a href="/hotels/<%= hotel._id %>/edit">
          <button class="btn btn-info">Edit</button></a>
            <form class="d-inline" action="/hotels/<%= hotel._id %>?_method=DELETE" method="POST">
              <button class="btn btn-danger">Delete</button>
            </form>
        </div>
        <% } %> 
        <div class="card-footer text-muted mt-3">
          2 days ago
        </div>
    </div>
    </div>

<div class="col-5">
  <div id='map'style='width: 100%; height: 400px;' class="mb-3"></div>
  <ul  class="list-group" id="stick-it2">
    <li class="list-group-item"><%= hotel.city%></li>
    <li class="list-group-item">Posted by: <%= hotel.author.username%></li>
    <li class="list-group-item">$<%= hotel.price%>/night</li>
</ul>
<% let sum=0,count=0,netrat; %>
<% for (let review of hotel.reviews){ %>
  <% sum+=review.rating; %>
  <% count++ %>
  <% } %>
  <% netrat=(sum)/(count) %>
  <div class="stars-outer mt-3">
    <div class="stars-inner"></div>
  </div>
    <p class="card-title" style="display:inline;">( Rating: <%= netrat %> )</p> 
    <p class="card-title strong">(<%= count %> Reviews )</p> 
</div>
<div class="container1">
  <div class="cardcr">
    <div class="circle">
      <h2>Single</h2>
    </div>
    <div class="content">
      <p>A room assigned to one person. May have one or more beds.</p>
   <a href="#">Book Now</a>
    </div>
  </div>
  <div class="cardcr">
    <div class="circle">
      <h2>King</h2>
    </div>
    <div class="content">
      <p>A room with a king-sized bed. May be occupied by one or more people.</p>
   <a href="#">Book Now</a>
    </div>
  </div>
  <div class="cardcr">
    <div class="circle">
      <h2>Suite</h2>
    </div>
    <div class="content">
      <p>A parlour or living room connected with to one or more bedrooms. (A room with one or more bedrooms and a separate living space.)</p> <a href="#">Book Now</a>
    </div>
  </div>
</div>

    <div>
    <% if(currentUser){ %>
      <h3>Leave your review</h3>
      <form action="/hotels/<%= hotel._id %>/reviews" method="POST" class="mb-3 validated-form" novalidate>
    
        <!-- <div class="mb-3">
          <label class="form-label" for="rating">Rating</label>
          <input class="form-range" type="range" min="1" max="5" name="review[rating]" id="rating">
        </div> -->
    
        <fieldset class="starability-basic">
          <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1" checked
              aria-label="No rating." />
          <input type="radio" id="first-rate1" name="review[rating]" value="1" />
          <label for="first-rate1" title="Terrible">1 star</label>
          <input type="radio" id="first-rate2" name="review[rating]" value="2" />
          <label for="first-rate2" title="Not good">2 stars</label>
          <input type="radio" id="first-rate3" name="review[rating]" value="3" />
          <label for="first-rate3" title="Average">3 stars</label>
          <input type="radio" id="first-rate4" name="review[rating]" value="4" />
          <label for="first-rate4" title="Very good">4 stars</label>
          <input type="radio" id="first-rate5" name="review[rating]" value="5" />
          <label for="first-rate5" title="Amazing">5 stars</label>
      </fieldset>
    
        <div class="mb-3">
          <label class="form-label" for="body">Reviews</label>
          <textarea  class="form-control" name="review[body]" id="body" cols="30" rows="2" required></textarea>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
    
        <button class="btn btn-success"> Submit </button>
      </form>
      <% } %>
      <% for (let review of hotel.reviews){%> 
        <div class="card mb-3">
          <div class="card-body">
            <h5 class="card-title">Rating: <%= review.rating %> </h5>
            <p class="starability-result" data-rating="<%=review.rating%>">
              Rated: <%= review.rating %> stars
          </p>
          
            <h6 class="card-subtitle mb-2 text-muted">By <%= review.author.username %> </h6> 
            <p class="card-text">Review: <%= review.body %> </p>
            <%  if( currentUser && review.author.equals(currentUser._id))  {%>
              <form action="/hotels/<%= hotel._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
              <button class="btn btn-sm btn-danger">Delete</button>
              </form>
              <% } %>
          </div>    
        </div>
      <% } %> 
    </div>

  <footer>
    <a href="/hotels">All hotels</a>
  </footer>

  <script>
    const mapToken='<%- process.env.MAPBOX_TOKEN%>';
    const hotel= <%- JSON.stringify(hotel) %>;
    const netrat = <%- netrat%>;
  </script>
  <script src="/javascripts/maps.js"> </script>
  <script src="/javascripts/star.js"> </script>
  
    