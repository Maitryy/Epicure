<% layout('layouts/boilerplate')%>
<div class="row">
    <div class="col-6">
      <div class="card">
        <img src="<%= hotel.image %>" class="card-img-top" alt="...">
        <div class="card mb-3">
            <div class="card-body">
                <h5 class="card-title"><%= hotel.name%></h5>
                <p class="card-text"><%= hotel.description%></p>
            </div>
            <ul class="list-group list-group-flush">
                <li class="list-group-item text-muted"><%= hotel.location%></li>
                <li class="list-group-item">$<%= hotel.price%>/night</li>
            </ul>
            
            <div class="card-body">
            <a href="/hotels/<%= hotel._id %>/edit">
              <button class="btn btn-info">Edit</button></a>
                <form class="d-inline" action="/hotels/<%= hotel._id %>?_method=DELETE" method="POST">
                  <button class="btn btn-danger">Delele</button>
                </form>
              </p>
            </div>
            <div class="card-footer text-muted">
              2 days ago
          </div>
        </div>
      </div>
    </div>
    </div>
    

  <footer>
    <a href="/hotels">All hotels</a>
  </footer>